<div class = "container py-3">
<h1>New game</h1>
</div>
<div class="container d-flex justify-content-between py-4">
  <% @grid.each do |letter|%>
    <h4 class="border border-2 p-5 bg-info bg-gradient shadow-sm"><%= letter %></h4>
  <%end%>
</div>
<div class="container py-3">
<form action="/score" method="post" data-turbo="false">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :grid, @grid %>
  <div class="mb-3">
    <label for="word" class="form-label">What is your longest word?</label>
    <input type="word" class="form-control" name="word">
  </div>
  <input type="submit" class="btn btn-primary" value="Go!">
</form>
</div>
